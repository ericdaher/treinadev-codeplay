<% instructor.errors.each do |error| %>
  <span><%= error.full_message %></span><br>
<% end %>

<%= form_with model: instructor do |form| %>

  <%= form.label :name, 'Nome' %>
  <%= form.text_field :name %>
  <%= form.label :email, 'Email' %>
  <%= form.text_field :email %>
  <%= form.label :bio, 'Descrição' %>
  <%= form.text_area :bio %>
  <%= form.label :profile_picture, 'Foto de Perfil' %>
  <%= form.file_field :profile_picture %>

  <%= form.submit button_text %>
<% end %>