<h1><%= t('home.title') %></h1>

<div class="card mb-3">
  <div class="card-body">
    <h3 class="card-title"><%= t('home.available_courses') %></h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col"><%= Course.human_attribute_name('name') %></th>
          <th scope="col"><%= Course.human_attribute_name('description') %></th>
          <th scope="col"><%= Course.human_attribute_name('price') %></th>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= link_to course.name, course %></td>
            <td><%= course.description %></td>
            <td><%= number_to_currency course.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>