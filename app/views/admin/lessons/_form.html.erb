<% lesson.errors.each do |error| %>
  <div class="container px-4 mt-3 alert alert-danger">
    <span><%= error.full_message %></span><br>
  </div>
<% end %>

<%= form_with model: [:admin, course, lesson] do |form| %>

  <div class="mb-3">
    <%= form.label :name, 'Nome', class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :duration, 'Duração', class: 'form-label' %>
    <%= form.number_field :duration, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :description, 'Descrição', class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
  <%= link_to t('helpers.button.back'), back_path, class: 'btn btn-secondary' %>
<% end %>