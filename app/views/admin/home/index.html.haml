%h1= t('home.title')

.card.mb-3
  .card-body
    %h3.card-title= t('home.available_courses')
    %table.table
      %thead
        %tr
          %th{scope: 'col'}= Course.human_attribute_name('name')
          %th{scope: 'col'}= Course.human_attribute_name('description')
          %th{scope: 'col'}= Course.human_attribute_name('price')
      %tbody
        - @courses.each do |course|
          %tr
            %td= link_to course.name, course
            %td= course.description
            %td= number_to_currency course.price
