<% if @instructors.empty? %>
  <h3><%= t('.empty') %></h3>
<% else %>
  <div class="card mb-3">
    <div class="card-body">
      <h3 class="card-title"><%= Instructor.model_name.human(count: 2) %></h3>
      <table class="table">
        <thead>
          <tr>
            <th scope="col"><%= Instructor.human_attribute_name('name') %></th>
            <th scope="col"><%= Instructor.human_attribute_name('description') %></th>
          </tr>
        </thead>
        <tbody>
          <% @instructors.each do |instructor| %>
            <tr>
              <td><%= link_to instructor.name, admin_instructor_path(instructor) %></td>
              <td><%= instructor.bio %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>

<%= link_to t('.register'), new_admin_instructor_path, class: 'btn btn-primary' %>
<%= link_to t('helpers.button.back'), root_path, class: 'btn btn-secondary' %>