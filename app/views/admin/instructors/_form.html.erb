<% instructor.errors.each do |error| %>
  <div class="container px-4 mt-3 alert alert-danger">
    <span><%= error.full_message %></span><br>
  </div>
<% end %>

<%= form_with model: [:admin, instructor] do |form| %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :email, class: 'form-label' %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :bio, class: 'form-label' %>
    <%= form.text_area :bio, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :profile_picture, class: 'form-label' %>
    <%= form.file_field :profile_picture, class: 'form-control' %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
  <%= link_to t('helpers.button.back'), back_path, class: 'btn btn-secondary' %>
<% end %>