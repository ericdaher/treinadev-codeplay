<% if @courses.empty? %>
  <h1><%= t('.empty') %></h1>
<% end %>

<% @courses.each do |course| %>
  <h1><%= link_to course.name, course %></h1>
  <p><%= course.description %></p>
  <p><%= number_to_currency course.price %></p>
<% end %>

<%= link_to t('.register'), new_course_path %>
<%= link_to t('helpers.button.back'), root_path %>