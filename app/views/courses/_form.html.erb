<% course.errors.each do |error| %>
  <div class="container px-4 mt-3 alert alert-danger">
    <span><%= error.full_message %></span><br>
  </div>
<% end %>

<%= form_with model: course do |form| %>

  <div class="mb-3">
  <%= form.label :name, class: 'form-label' %>
  <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="mb-3">
  <%= form.label :description, class: 'form-label' %>
  <%= form.text_field :description, class: 'form-control' %>
  </div>
  <div class="mb-3">
  <%= form.label :instructor_id, Instructor.model_name.human, class: 'form-label' %>
  <%= form.collection_select :instructor_id, instructors, :id, :display_name, {}, { class: 'form-select' } %>
  </div>
  <div class="mb-3">
  <%= form.label :code, class: 'form-label' %>
  <%= form.text_field :code, class: 'form-control' %>
  </div>
  <div class="mb-3">
  <%= form.label :price, class: 'form-label' %>
  <%= form.number_field :price, class: 'form-control' %>
  </div>
  <div class="mb-3">
  <%= form.label :enrollment_deadline, class: 'form-label' %>
  <%= form.date_field :enrollment_deadline, class: 'form-control' %>
  </div>
  <div class="mb-3">
  <%= form.label :banner, class: 'form-label' %>
  <%= form.file_field :banner, class: 'form-control' %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
  <%= link_to t('helpers.button.back'), back_path, class: 'btn btn-secondary' %>
<% end %>