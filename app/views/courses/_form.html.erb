<% course.errors.each do |error| %>
  <span><%= error.full_message %></span><br>
<% end %>

<%= form_with model: course do |form| %>

  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :description %>
  <%= form.text_field :description %>
  <%= form.label :instructor_id, 'Professor' %>
  <%= form.collection_select :instructor_id, instructors, :id, :display_name %>
  <%= form.label :code %>
  <%= form.text_field :code %>
  <%= form.label :price %>
  <%= form.number_field :price %>
  <%= form.label :enrollment_deadline %>
  <%= form.date_field :enrollment_deadline %>
  <%= form.label :banner %>
  <%= form.file_field :banner %>

  <%= form.submit %>
<% end %>